<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MijnSauna.Frontend.Maui.SettingsPage">

    <StackLayout Padding="15">
        
        <Label Text="Service URL" TextColor="Black" />
        <Entry Text="{Binding ServiceBaseUrl }"
                TextColor="Black" Margin="0,0,0,20" />
        
        <Label Text="ClientId" TextColor="Black" />
        <Entry Text="{Binding ClientId}"
               TextColor="Black" Margin="0,0,0,20" />
        
        <Label Text="IsSaunaMode" TextColor="White" />
        <CheckBox IsChecked="{Binding IsSaunaMode}"
                  Color="White" Margin="0,0,0,20" />

    </StackLayout>

</ContentPage>